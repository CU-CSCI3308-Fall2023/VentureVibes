<%- include ('../partials/header') %>
<%- include ('../partials/menu') %>
<%- include ('../partials/message') %>
<main>
	<div class="container">
		<table>
            <tr>
                <th>Activities</th>
                <th>Distance from your location (Miles)</th>
                <th>Add to this trip</th>
            </tr>
            <%data.forEach((event) => { %>
                <tr>
                    <td><%-event.name%></td>
                    <td><%-event.distance%></td>
					<td>
						<form action=""/discover/add" method="POST">
                                
								<input type="hidden" name="activity_title" value="<%=event.name%>">
                                <input type="hidden" name="description" value="<%=0%>">
                                <input type="hidden" name="location" value="<%=0%>">
                                <input type="hidden" name="start_date" value="<%=1000-01-01%>">
                                <input type="hidden" name="end_date" value="<%=9999-12-31%>">
                                <input type="submit" value="ADD">
                        </form>
					</td>
                </tr>
            <%})%>
        </table>

		<form action="/discoverData" method="GET">
			<label for="Latitude">Latitude</label>
			<input name="latitude" type="text" id="latitude"/>
		
			<label for="Longitude">Longitude</label>
			<input type="text" name="longitude" id="longitude"/>

            <label for="Radius">Radius</label>
			<input type="text" name="radius" id="radius"/>
			
			<button type="submit">Find</button>
		</form>

</main>

<%- include ('../partials/footer') %>