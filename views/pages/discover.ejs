<%- include ('../partials/header') %> 
<%- include ('../partials/menu') %>
<%-include ('../partials/message') %>

<script>
    async function addEvent(event, dates) {
        eventData = JSON.parse(event);
        dateData = JSON.parse(dates);

        const activity_title = eventData.name;
        const description = eventData.description;
        const location = eventData.address_obj.city;
        const endDate = dateData.endDate;
        const startDate = dateData.startDate;

        const body = {
            activity_title,
            description,
            location,
            endDate,
            startDate,
        };

        const response = await fetch("/discover/add", {
            method: "POST",
            headers: { "Content-type": "application/json" },
            body: JSON.stringify(body),
        });

        const jsonData = await response.json();

        console.log(jsonData);

        return false;
    }
</script>

<main>
    <div class="container">
        <div class="row">
            <div class="col-md-4" style="margin-top: 5%">
                <form action="/discoverData" method="GET">
                    <div class="form-group" style="margin-bottom: 3%">
                        <label for="latitude">Latitude</label>
                        <input
                            name="latitude"
                            type="text"
                            class="form-control"
                            id="latitude"
                        />
                        <p class ="form-text" align="top-right">
                           Find latitude and longitude: <a href="https://www.latlong.net/">Here</a>
                        </p>
                    </div>

                    <div class="form-group" style="margin-bottom: 3%">
                        <label for="longitude">Longitude</label>
                        <input
                            type="text"
                            name="longitude"
                            class="form-control"
                            id="longitude"
                        />
                    </div>
                    <div class="form-group" style="margin-bottom: 1%">
                        <label for="Radius" class = "form-label">Radius</label>
                        <select class="form-select" id="radius" required>
                            <option selected disabled value="">Choose...</option>
                            <option>50 mi</option>
                            <option>100 mi</option>
                            <option>250 mi</option>
                            <option>300+ mi</option>
                          </select>
                    </div>

                    <div class="form-group" style="margin-bottom: 3%">
                        <label for="prefWeather" class = "form-label">Preferred Weather</label>
                        <select class="form-select" id="prefWeather" required>
                            <option selected disabled value="">Choose...</option>
                            <option>Clouds</option>
                            <option>Clear</option>
                            <option>Snow</option>
                            <option>Rain</option>
                          </select>
                    </div>

                    <div class="form-group" style="margin-bottom: 3%">
                        <label for="startDate">Start Date</label> 
                    <div id="datepicker" 
                         class="input-group date" 
                         data-date-format="mm-dd-yyyy"> 
                        <input class="form-control" 
                               type="text" readonly /> 
                        <span class="input-group-addon"> 
                            <i class="glyphicon glyphicon-calendar"></i> 
                        </span> 
                    </div> 
                </div> 


                <div class="form-group" style="margin-bottom: 3%">
                    <label for="endDate">End Date</label> 
                <div id="datepicker2" 
                     class="input-group date" 
                     data-date-format="mm-dd-yyyy"> 
                    <input class="form-control" 
                           type="text" readonly /> 
                    <span class="input-group-addon"> 
                        <i class="glyphicon glyphicon-calendar"></i> 
                    </span> 
                </div> 
            </div> 

                    <button type="submit" class="btn btn-primary">Find</button>
                </form>
            </div>
            <div class="col-md-8" style="margin-top: 5%">
                <div class="row row-cols-1 row-cols-md-3 g-4">
                        <% if(data && data.length > 0) { data.forEach((event) => {
                        %>
                        <div class="card" style="margin-bottom: 3%">
                            <div class="card-body">
                                <h5 class="card-title"><%- event.name %></h5>
                                <p class="card-text"><%= event.description %></p>
                                <p class="card-text">
                                    City: <%= event.address_obj.city %>
                                </p>
                                <a
                                    href="<%= event.web_url %>"
                                    class="btn btn-primary"
                                    target="_blank"
